<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bhf" name="Pataint Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container" style="margin-top:20px; margin-bottom:20px">
                        <div class="row">
                            <div class="col-lg-6 offset-lg-2">
                                <h3>PMIS Information</h3>
<!--                                <form role="form" action="/create/bhf/" method="post">-->
                                    <form role="form" action="/create/bhf/" method="post" enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>


                                    <div class="form-group">
                                        <label for="uid_number" class="form-label">UID Nummer</label>
                                        <input type="text" id="uid_number" name="uid_number" placeholder="CHE-123.456.789" class="form-control" required="required"/>
                                    </div>


                                    <div class="form-group">
                                        <label for="company_name" class="form-label">Firmenname</label>
                                        <input type="text" id="company_name" name="company_name" placeholder="Firmenname" class="form-control" required="required"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="salutation" class="form-label">Anrede</label>
                                        <select id="salutation" name="salutation" class="form-select" required="required">
                                            <option value="">Anrede wählen</option>
                                            <option value="Herr">Herr</option>
                                            <option value="Frau">Frau</option>
                                            <option value="Divers">Divers</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="firstname" class="form-label">Vorname</label>
                                        <input type="text" id="firstname" name="firstname" placeholder="Vorname" class="form-control" required="required"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="lastname" class="form-label">Nachname</label>
                                        <input type="text" id="lastname" name="lastname" placeholder="Nachname" class="form-control" required="required"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="email" class="control-label">Email</label>
                                        <input type="text" name="email"  t-att-value="email" id="email" class="form-control" placeholder="Email Address"/>
                                    </div>


                                    <div class="form-group">
                                        <label for="country_code" class="form-label">Vorwahl</label>
                                        <select id="country_code" name="country_code" class="form-select">
                                            <option value="+41">+41 (CH)</option>
                                            <option value="+49">+49 (DE)</option>
                                            <option value="+43">+43 (AT)</option>
                                            <option value="+33">+33 (FR)</option>
                                            <option value="+39">+39 (IT)</option>
                                            <option value="+423">+423 (LI)</option>
                                        </select>
                                    </div>


                                    <div class="form-group">
                                        <label for="phone_number" class="form-label">Telefon</label>
                                        <input type="tel" id="phone_number" name="phone_number" placeholder="Telefon" class="form-control"/>
                                    </div>



                                    <div class="form-group">
                                        <label for="street" class="form-label">Straße</label>
                                        <input type="text" id="street" name="street" placeholder="Straße" class="form-control"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="house_number" class="form-label">Nr.</label>
                                        <input type="text" id="house_number" name="house_number" placeholder="Nr." class="form-control"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="postal_code" class="form-label">PLZ</label>
                                        <input type="text" id="postal_code" name="postal_code" placeholder="PLZ" class="form-control"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="city" class="form-label">Ort</label>
                                        <input type="text" id="city" name="city" placeholder="Ort" class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="country" class="form-label">Land</label>
                                        <select id="country" name="country" class="form-select">
                                            <option value="CH">Schweiz</option>
                                            <option value="DE">Deutschland</option>
                                            <option value="AT">Österreich</option>
                                        </select>
                                    </div>


                                    <div class="form-group">
                                        <label for="industry" class="form-label">Branche</label>
                                        <select id="industry" name="industry" class="form-select" required="required">
                                            <option value="">Bitte wählen</option>
                                            <option value="Kosmetik / Beauty">Kosmetik / Beauty</option>
                                            <option value="Einzelhandel">Einzelhandel</option>
                                            <option value="E-Commerce">E-Commerce</option>
                                            <option value="POS">POS (stationärer Handel)</option>
                                            <option value="Gastronomie">Gastronomie</option>
                                            <option value="Dienstleistungen">Dienstleistungen</option>
                                        </select>
                                    </div>


                                    <div class="form-group">
                                        <label class="form-label" for="website_url">Website / Online-Shop:</label>
                                        <input type="url" id="website_url" name="website_url" placeholder="https://www.beispielshop.ch" class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="monthly_sales_estimated">Monatlicher Umsatz (geschätzt):</label>
                                        <input id="monthly_sales_estimated" name="monthly_sales_estimated" placeholder= 'z.B. 30000' class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="annual_revenue">Jahresumsatz (geschätzt):</label>
                                        <input id="annual_revenue" name="annual_revenue" placeholder= 'z.B. 350000' class="form-control"/>
                                    </div>


                                    <div class="form-group">
                                        <label class="form-label" for="average_transaction_value">Durchschnittlicher Transaktionswert:</label>
                                        <input id="average_transaction_value" name="average_transaction_value" placeholder= 'z.B. 120' class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="monthly_transaction_value">Transaktionen pro Monat (geschätzt):</label>
                                        <input id="monthly_transaction_value" name="monthly_transaction_value" placeholder= 'z.B. 200' class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="pos_cash_register_system">POS-/Kassensystem:</label>
                                        <input id="pos_cash_register_system" name="pos_cash_register_system" placeholder= 'z.B. SwissPOS, Lightspeed' class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="online_shop_system">Online - Shop - System:</label>
                                        <input id="online_shop_system" name="online_shop_system" placeholder= 'z.B. Shopify, Woocommerce' class="form-control"/>
                                    </div>

<!--                                    <div class="col-12">
