    <template id="portal_my_details_fields" inherit_id="portal.portal_my_details_fields">
        <div t-attf-class="mb-3 #{error.get('name') and 'o_has_error' or ''} col-xl-6" position="after">
            <div t-attf-class="mb-3 #{error.get('name_bn') and 'o_has_error' or ''} col-xl-6">
                <label class="col-form-label" for="name_bn">নাম</label>
                <input type="text" name="name_bn" t-attf-class="form-control #{error.get('name_bn') and 'is-invalid' or ''}" t-att-value="name_bn or partner.name_bn" />
            </div>
            <div t-attf-class="mb-3 #{error.get('father_name') and 'o_has_error' or ''} col-xl-6">
                <label class="col-form-label" for="father_name">Father</label>
                <input type="text" name="father_name" t-attf-class="form-control #{error.get('father_name') and 'is-invalid' or ''}" t-att-value="father_name or partner.father_name" />
            </div>
        </div>
    </template>

