<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
        <record model="ir.module.category" id="module_category_pmis_user">
            <field name="name">PMIS</field>
            <field name="sequence">4</field>
        </record>
        <record id="group_account_pmis_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="pmis.module_category_pmis_user"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    <record id="group_account_pmis_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="pmis.module_category_pmis_user"/>
            <field name="implied_ids" eval="[(4, ref('pmis.group_account_pmis_user'))]"/>
        </record>
    <record id="group_account_pmis_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="pmis.module_category_pmis_user"/>
            <field name="implied_ids" eval="[(4, ref('pmis.group_account_pmis_manager'))]"/>
        </record>
    <record id="read_own_pmis_rule" model="ir.rule">
            <field name="name">pmis.res.contact.own</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="domain_force">[('id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[Command.link(ref('group_account_pmis_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

    </data>
</odoo>