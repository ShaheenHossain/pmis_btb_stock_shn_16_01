<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="pmis_spouse_form" model="ir.ui.view">
            <field name="name">pmis.spouse.form</field>
            <field name="priority" eval="1"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Partners">
                <div class="alert alert-warning oe_edit_only" role="alert" attrs="{'invisible': [('same_vat_partner_id', '=', False)]}">
                  A partner with the same <span><span class="o_vat_label">Tax ID</span></span> already exists (<field name="same_vat_partner_id"/>), are you sure to create a new one?
                </div>
                <div class="alert alert-warning oe_edit_only" role="alert" attrs="{'invisible': [('same_company_registry_partner_id', '=', False)]}">
                  A partner with the same <span><span class="o_vat_label">Company Registry</span></span> already exists (<field name="same_company_registry_partner_id"/>), are you sure to create a new one?
                </div>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <div class="oe_title mb24">
                        <field name="is_company" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="country_code" invisible="1"/>
                        <field name="company_type" widget="radio" options="{'horizontal': true}" invisible="1"/>
                        <h1>
                            <field id="company" class="text-break" name="name" default_focus="1" placeholder="e.g. Lumber Inc" attrs="{'required' : [('type', '=', 'contact'),('is_company', '=', True)], 'invisible': [('is_company','=', False)]}"/>
                            <field id="individual" class="text-break" name="name" default_focus="1" placeholder="e.g. Brandom Freeman" attrs="{'required' : [('type', '=', 'contact'), ('is_company', '=', False)], 'invisible': [('is_company','=', True)]}"/>
                        </h1>
                        <div class="o_row" invisible="1">
                            <field name="parent_id" widget="res_partner_many2one" placeholder="Company Name..." domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True, 'default_user_id': user_id}" attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
                                <field name="company_name" attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
                                <button name="create_company" icon="fa-plus-square" string="Create company" type="object" class="oe_edit_only btn-link" attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
                        </div>
                        <div class="o_row" >
                            <group>
                                <field name="nid_no"/>
                            </group>
                        </div>
                    </div>

                    <group>
                        <group>
                            <span class="o_form_label o_td_label" name="address_name">
<!--                                <field name="type" attrs="{'invisible': [('is_company','=', True)], 'required': [('is_company','!=', True)], 'readonly': [('user_ids', '!=', [])]}" class="fw-bold"/>-->
                                <field name="type" attrs="{'invisible': True}" class="fw-bold"/>
                                <b >Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="city" placeholder="Area/Thana" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="District" options="{'no_open': True, 'no_quick_create': True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <div name="partner_address_country" class="d-flex justify-content-between">
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                </div>
                            </div>
                            <field name="vat" placeholder="e.g. BE0477472701" attrs="{'invisible': True}"/>
                        </group>
                        <group>
                            <field name="function" placeholder="e.g. Sales Director" attrs="{'invisible': True}"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="user_ids" invisible="1"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'required': [('user_ids','!=', [])]}"/>
                            <field name="website" string="Website" widget="url" invisible="1" placeholder="e.g. https://www.odoo.com"/>
                            <field name="title" options="{&quot;no_open&quot;: True}" placeholder="e.g. Mister" attrs="{'invisible': True}"/>
                            <field name="active_lang_count" invisible="1"/>
                            <field name="lang" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"/>
                            <field name="category_id" widget="many2many_tags" invisible="True" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="e.g. &quot;B2B&quot;, &quot;VIP&quot;, &quot;Consulting&quot;, ..."/>
                        </group>
                    </group>

                    <notebook colspan="4" invisible="True">
                        <page string="Contacts &amp; Addresses" name="contact_addresses" autofocus="autofocus">
                            <field name="child_ids" mode="kanban" context="{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_lang': lang, 'default_user_id': user_id, 'default_type': 'other'}">
                                <kanban>
                                    <field name="id"/>
                                    <field name="color"/>
                                    <field name="name"/>
                                    <field name="title"/>
                                    <field name="type"/>
                                    <field name="email"/>
                                    <field name="parent_id"/>
                                    <field name="is_company"/>
                                    <field name="function"/>
                                    <field name="phone"/>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="mobile"/>
                                    <field name="state_id"/>
                                    <field name="image_128"/>
                                    <field name="avatar_128"/>
                                    <field name="lang"/>
                                    <!-- fields in form x2many view to diminish requests -->
                                    <field name="comment"/>
                                    <field name="display_name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                            <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                <div class="o_kanban_image">
                                                    <img alt="Contact image" t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <field name="name"/>
                                                    <div t-if="record.function.raw_value"><field name="function"/></div>
                                                    <div t-if="record.email.raw_value"><field name="email" widget="email"/></div>
                                                    <div t-if="record.type.raw_value != 'contact'">
                                                        <div>
                                                            <field name="zip"/>
                                                            <field name="city"/>
                                                        </div>
                                                        <field t-if="record.state_id.raw_value" name="state_id"/>
                                                        <field name="country_id"/>
                                                    </div>
                                                    <div t-if="record.phone.raw_value">Phone: <t t-esc="record.phone.value"/></div>
                                                    <div t-if="record.mobile.raw_value">Mobile: <t t-esc="record.mobile.value"/></div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Contact / Address">
                                    <sheet>
                                        <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                                        <field name="parent_id" invisible="1"/>
                                        <div class="text-muted oe_edit_only">
                                            <p class="mb-0" attrs="{'invisible': [('type', '!=', 'contact')]}">
                                                <span>Use this to organize the contact details of employees of a given company (e.g. CEO, CFO, ...).</span>
                                            </p>
                                            <p class="mb-0" attrs="{'invisible': [('type', '!=', 'invoice')]}">
                                                <span>Preferred address for all invoices. Selected by default when you invoice an order that belongs to this company.</span>
                                            </p>
                                            <p class="mb-0" attrs="{'invisible': [('type', '!=', 'delivery')]}">
                                                <span>Preferred address for all deliveries. Selected by default when you deliver an order that belongs to this company.</span>
                                            </p>
                                            <p class="mb-0" attrs="{'invisible': [('type', '!=', 'private')]}">
                                                <span>Private addresses are only visible by authorized users and contain sensitive data (employee home addresses, ...).</span>
                                            </p>
                                            <p class="mb-0" attrs="{'invisible': [('type', '!=', 'other')]}">
                                                <span>Other address for the company (e.g. subsidiary, ...)</span>
                                            </p>
                                        </div>
                                        <hr/>
                                        <group>
                                            <group>
                                                <field name="name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                                                <field name="title" options="{'no_open': True}" placeholder="e.g. Mr." attrs="{'invisible': [('type','!=', 'contact')]}"/>
                                                <field name="function" placeholder="e.g. Sales Director" attrs="{'invisible': [('type','!=', 'contact')]}"/>
                                                <label for="street" string="Address" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                                <div attrs="{'invisible': [('type','=', 'contact')]}">
                                                    <div class="o_address_format" name="div_address">
                                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                        <field name="city" placeholder="City" class="o_address_city"/>
                                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                    </div>
                                                </div>
                                            </group>
                                            <group>
                                                <field name="email" widget="email"/>
                                                <field name="phone" widget="phone"/>
                                                <field name="mobile" widget="phone"/>
                                                <field name="company_id" invisible="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="comment" placeholder="Internal notes..." nolabel="1" colspan="2"/>
                                        </group>
                                        <field name="lang" invisible="True"/>
                                        <field name="user_id" invisible="True"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page name="sales_purchases" string="Sales &amp; Purchase">
                            <group name="container_row_2">
                                <group string="Sales" name="sale" priority="1">
                                    <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                </group>
                                <group string="Purchase" name="purchase" priority="2">
                                </group>
                                <group name="misc" string="Misc">
                                    <field name="company_registry" attrs="{'invisible': [('parent_id','!=',False)]}"/>
                                    <field name="ref" string="Reference"/>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('parent_id', '!=', False)]}" force_save="1"/>
                                    <field name="industry_id" attrs="{'invisible': [('is_company', '=', False)]}" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>
                        <page name="internal_notes" string="Internal Notes">
                            <field name="comment" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>


        <record id="pmis_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">pmis.res.partner.form.inherit</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <field name="company_type" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <xpath expr="//group[1]/group[1]" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//group[1]/group[1]" position="after">
                    <group>

                        <field name="contact_type" placeholder="contact Type"/>
                        <field name="pds_id" placeholder="PDS ID"/>
                        <field name="name_bn" placeholder="নাম"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="placeholder">Organisation</attribute>
                </xpath>
                <field name="child_ids" position="before">
                    <group>
                        <group string="Present Address">
                            <field name="street" string="House"/>
                            <field name="street2" string="Street/Village"/>
                            <field name="post_office" string="Post Office"/>
                            <field name="city" string="Thana"/>
                            <field name="state_id" options="{'no_create': True}" string="District"
                                   domain="[('country_id','=',country_id)]"/>
                            <field name="country_id" options="{'no_create': True}" attrs="{'invisible':True}"/>
                            <field name="mobile" string="Contact No." placeholder="Contact Number"/>
                        </group>
                        <group string="Permanent Address">
                            <field name="per_house"/>
                            <field name="per_street" string="Street/Village"/>
                            <field name="per_post"/>
                            <field name="per_thana"/>
                            <field name="per_district" string="District" options="{'no_create': True}"
                                   domain="[('country_id','=',per_country)]"/>
                            <field name="per_country" options="{'no_create': True}" attrs="{'invisible':True}"/>
                            <field name="per_phone"/>
                        </group>
                    </group>
                </field>

                <page name='sales_purchases' position="attributes">
                    <attribute name="invisible">1</attribute>
                </page>

                <page name="contact_addresses" position="after">
                    <page name='service_details' string="Service Details"
                          attrs="{'invisible': [('pds_id', '=', False)]}">
                        <notebook colspan="4">

                            <page name="joining_record" string="Joining Record">
                                <group string="Joining records">
                                    <group>
                                        <field name="job_category"/>
                                        <field name="cadre_date"
                                               attrs="{'invisible':[('job_category','!=',%(pmis_job_category_depu)d)]}"/>
                                        <field name="bcs_id"
                                               attrs="{'invisible':[('job_category','!=',%(pmis_job_category_depu)d)]}" options="{'no_create': True}"/>
                                        <field name="bcs_cadre"
                                               attrs="{'invisible':[('job_category','!=',%(pmis_job_category_depu)d)]}" options="{'no_create':True}"/>
                                        <field name="go_date"
                                               attrs="{'invisible':[('job_category','!=',%(pmis_job_category_depu)d)]}"/>
                                    </group>
                                    <group>

                                        <field name="location"/>
                                    </group>
                                    <group>
                                        <field name="employer" domain="[('contact_type','=',3)]"/>
                                    </group>
                                    <group>
                                        <field name="merit_order"/>
                                    </group>
                                    <group>
                                        <field name="join_designation" options="{'no_create':True}"/>
                                    </group>
                                    <group>
                                        <field name="joining_grade" options="{'no_create':True}"/>
                                    </group>
                                    <group>
                                        <field name="join_date"/>
                                    </group>
                                    <group>
                                        <field name="joining_letter"/>
                                    </group>
                                    <group>
                                        <field name="joining_circular_no" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                    </group>
                                    <group>
                                        <field name="circular_date"/>
                                    </group>

                                    <group>
                                        <field name="contract_no" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                    </group>
                                    <group>
                                        <field name="contract_date"/>
                                    </group>

                                    <group>
                                        <field name="apt_date"/>
                                    </group>
                                    <group>
                                        <field name="apt_copy"/>
                                    </group>
                                    <group>
                                        <field name="conf_date"/>
                                    </group>
                                    <group>
                                        <field name="conf_copy"/>
                                    </group>
                                    <group>
                                        <field name="prl_date"/>
                                    </group>
                                    <group>
                                        <field name="prov_no"/>
                                    </group>
                                    <group>
                                        <field name="pv_report"/>
                                    </group>
                                    <group>
                                        <field name="medical_report"/>
                                    </group>

                                    <group>
                                        <field name="job_quota"/>
                                    </group>
                                    <group attrs="{ 'invisible': [('job_quota','=',False)]}">
                                        <field name="quota_doc"/>
                                    </group>
                                    <group></group>
                                    <group attrs="{ 'invisible': [('job_quota','=',False)]}">
                                        <field name="join_quota"/>
                                    </group>


                                </group>
                            </page>
                            <page name="postin_record" string="Posting Record">
                                <group string="Posting Records">
                                    <field name="posting_records" nolabel="1" colspan="2"
                                           context="{'default_partner_id':active_id}">
                                        <tree editable="bottom">
                                            <field name="designation"/>
                                            <field name="organisation"/>
                                            <field name="location"/>
                                            <field name="country_id"/>
                                            <!--                                            <field name="go_date"/>-->
                                            <field name="joining_date"/>
                                            <field name="till_date"/>
                                            <field name="pay_scale"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name='promotion' string="Promotion">
                                <group>
                                    <group>
                                        <field name="promotion_records">
                                            <tree editable="bottom">
                                                <field name="rank_id"/>
                                                <field name="promotion_date"/>
                                                <!--                                                <field name="go_date"/>-->
                                                <!--                                                <field name="promotion_nature"/>-->
                                                <field name="pay_scale"/>
                                                <field name="document"/>

                                            </tree>
                                        </field>

                                    </group>
                                </group>
                            </page>
                            <page name='Award' string="Award">
                                <group>
                                    <field name="award_ids" nolabel="1" colspan="2">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="ground"/>
                                            <field name="award_date"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name="training" string="Training">
                                <group string="Training Details">
                                    <field name="training_records" nolabel="1" colspan="2">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="institution_id" domain="[('contact_type', '=', 3)]"
                                                   context="{'default_contact_type': 3,}"/>
                                            <field name="from_date"/>
                                            <field name="till_date"/>
                                            <field name="duration"/>
                                            <field name="category_id" string="Type"/>
                                            <field name="document"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name='action' string="Actions/Punishment">
                                <group>
                                    <group>

                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </page>
                    <page name='Education_training' string="Education And Training"
                          attrs="{'invisible': [('pds_id', '=', False)]}">
                        <notebook>

                            <page name="education" string="Education">
                                <group string="Educational Qualification">
                                    <field name="education_records" nolabel="1" colspan="2">
                                        <tree editable="bottom">
                                            <field name="degree" string="Examination"/>
                                            <field name="passing_year"/>
                                            <field name="institute_id" string="Institution/Board"
                                                   domain="[('contact_type','=',1)]"
                                                   context="{'default_contact_type': 1,}"/>
                                            <field name="roll_no" string="Roll No"/>
                                            <field name="subject_id" domain="[('degree_ids','=',degree)]"/>
                                            <!--                                    <field name="result_system"/>-->
                                            <field name="result_id" string="Division/CGPA"/>
                                            <!--                                    <field name="gpa"/>-->
                                            <field name="distinction"/>
                                            <field name="certificate_copy" placeholder="Certificate"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </page>
                    <page name='personal_data' string="Personal Data"
                          attrs="{'invisible': [('is_company', '=', True)]}">
                        <group>
                            <group>
                                <field name="nid_no" placeholder="NID"/>
                                <field name="dob" placeholder="Date of Birth"/>
                                <field name="home_district"/>
                                <field name="father_name" placeholder="Father's Name "/>
                                <field name="mother_name" placeholder="Father's Name "/>
                                <field name="religion"/>
                                <field name="gender"/>
                                <field name="freedom_fighter"/>
                            </group>
                            <group>
                                <field name="marital_status"/>
                                <field name="spouse" attrs="{'invisible': [('marital_status', '=', 'Maried')]}"/>
                                <field name="children_ids" nolabel="1" colspan="2">
                                    <tree>
                                        <field name="name"/>
                                        <field name="dob"/>
                                        <field name="sex" options="{'no_create': True}"/>
                                    </tree>

                                </field>
                            </group>
                        </group>
                    </page>
                </page>

            </field>
        </record>
        <!--<record id="pmis.accounting_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">pmis.accounting.res.partner.form.inherit</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
               <page name='accounting' position="attributes">
                        <attribute name="invisible">1</attribute>
                    </page>
            </field>

    </record>-->


    </data>
</odoo>